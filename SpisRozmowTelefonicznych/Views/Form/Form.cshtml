                </div>
                <div id="PoleFormularza">
                    @Html.TextBoxFor(o => o.PHONE_NUMBER_CALLER)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.PHONE_NUMBER_CALLER)
                    </div>

                </div>

                <div id="OpisdoPola">
                    @Html.LabelFor(o => o.PHONE_NUMBER, "Numer telefonu na który przyszło połączenie:")

                </div>
                <div id="PoleFormularza">
                    @*@Html.DropDownListFor(m =>m.SelectedTelefon, (IEnumerable<SelectListItem>)Model.TelefonyUsera, " ", new { @class = "ddl" })*@
                    @Html.TextBoxFor(o => o.PHONE_NUMBER)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.PHONE_NUMBER)
                    </div>
                     
                    
                </div>

                <div id="OpisdoPola">
                    @Html.LabelFor(o => o.Date, "Data połączenia(miesiąc/dzień/rok):")

                </div>
                <div id="PoleFormularza">
                    @Html.TextBoxFor(o => o.Date, new { placeholder = "mm/dd/yyyy" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Date)
                    </div>

                </div>

                <div id="OpisdoPola">
                    @Html.LabelFor(o => o.NameCaller, "Imię osoby dzwoniącej:")

